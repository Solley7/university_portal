<?php
// PURPOSE: Deletes a course record from the database.

require_once 'db_connect.php';
session_start();

// Security Check: Admins only
if (!isset($_SESSION['user_id']) || $_SESSION['role'] != 'admin') {
    header("Location: login.php");
    exit();
}

// Check if an ID was provided
if (isset($_GET['id'])) {
    $course_id = $_GET['id'];
    
    $stmt = $conn->prepare("DELETE FROM courses WHERE id = ?");
    $stmt->bind_param("i", $course_id);
    
    if ($stmt->execute()) {
        // Redirect back to the course list with a success message
        header("Location: admin_courses.php?status=deleted");
        exit();
    } else {
        // Handle potential errors, though unlikely
        die("Error deleting course.");
    }
    $stmt->close();
} else {
    // If no ID is provided, just go back to the list
    header("Location: admin_courses.php");
    exit();
}
$conn->close();
?>
